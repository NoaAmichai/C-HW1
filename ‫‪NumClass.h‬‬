#ifndef  NUM_CLASS_H
#define NUM_CLASS_H

/* will return if a number is Armstrong number
an Armstrong number is an n-digit number that is equal to the sun of the nth powers of its digits.
*/
int isArmstrong(int);

/*will return if a number is a palindrome*/
int isPalindrome(int);


/*will return if a number is prime*/
int isPrime(int);

/*Strong number is a special number whose sum of the factorial of the digits is equal to the original number.
For example: 145 is strong number
*/
int isStrong(int);

#endif
